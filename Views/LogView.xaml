<UserControl x:Class="Clash_WPF.Views.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="4,0,4,12">
            <TextBlock Text="日志" Style="{StaticResource PageTitle}" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <TextBlock Text="级别:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,6,0" FontSize="12"/>
                <Button Content="Info" Style="{StaticResource SecondaryButton}" Padding="8,4"
                        Command="{Binding SetLogLevelCommand}" CommandParameter="info" Margin="0,0,4,0"/>
                <Button Content="Warning" Style="{StaticResource SecondaryButton}" Padding="8,4"
                        Command="{Binding SetLogLevelCommand}" CommandParameter="warning" Margin="0,0,4,0"/>
                <Button Content="Error" Style="{StaticResource SecondaryButton}" Padding="8,4"
                        Command="{Binding SetLogLevelCommand}" CommandParameter="error" Margin="0,0,4,0"/>
                <Button Content="Debug" Style="{StaticResource SecondaryButton}" Padding="8,4"
                        Command="{Binding SetLogLevelCommand}" CommandParameter="debug" Margin="0,0,12,0"/>
                <Button Content="清空" Style="{StaticResource DangerButton}" Padding="10,4"
                        Command="{Binding ClearLogsCommand}"/>
            </StackPanel>
        </DockPanel>

        <!-- Log List -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="4,0" Padding="0">
            <ListBox ItemsSource="{Binding Logs}" Background="Transparent" BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     x:Name="LogList">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="12,4"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}"
                                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Time}" FontSize="11"
                                       Foreground="{StaticResource TextSecondaryBrush}" FontFamily="Consolas"/>
                            <TextBlock Grid.Column="1" Text="{Binding Level}" FontSize="11"
                                       FontWeight="SemiBold" FontFamily="Consolas">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                                <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="WARNING">
                                                <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="INFO">
                                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Grid.Column="2" Text="{Binding Message}" FontSize="12"
                                       Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap"
                                       FontFamily="Consolas"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</UserControl>

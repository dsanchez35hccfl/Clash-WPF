<UserControl x:Class="Clash_WPF.Views.RuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="4,0,4,12">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <TextBlock Text="规则" Style="{StaticResource PageTitle}" Margin="0,0,12,0"/>
                <TextBlock Text="{Binding RuleCount, StringFormat='共 {0} 条'}"
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                           VerticalAlignment="Bottom" Margin="0,0,0,20"/>
            </StackPanel>
            <Button Content="刷新" Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Command="{Binding RefreshCommand}"/>
        </DockPanel>

        <!-- Rules Table -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Rules}" Margin="4,0"
                  Style="{StaticResource ModernDataGrid}"
                  ColumnHeaderStyle="{StaticResource ModernColumnHeader}"
                  CellStyle="{StaticResource ModernDataGridCell}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="50"/>
                <DataGridTextColumn Header="类型" Binding="{Binding Type}" Width="160"/>
                <DataGridTextColumn Header="规则内容" Binding="{Binding Payload}" Width="*" MinWidth="200"/>
                <DataGridTextColumn Header="代理" Binding="{Binding Proxy}" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

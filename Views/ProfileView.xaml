<UserControl x:Class="Clash_WPF.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Clash_WPF.Converters">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolVis"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InvBoolVis"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="4,0,4,12">
            <TextBlock Text="订阅管理" Style="{StaticResource PageTitle}" DockPanel.Dock="Left"/>
            <Button Content="+ 新增订阅" Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Command="{Binding ShowAddCommand}"/>
        </DockPanel>

        <!-- Add Profile Panel -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="4,0,4,12"
                Visibility="{Binding IsAddingProfile, Converter={StaticResource BoolVis}}">
            <StackPanel>
                <TextBlock Text="添加新订阅" Style="{StaticResource SectionTitle}"/>

                <TextBlock Text="名称" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,4"/>
                <TextBox Text="{Binding NewProfileName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}" Margin="0,0,0,10"/>

                <TextBlock Text="订阅地址" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,4"/>
                <TextBox Text="{Binding NewProfileUrl, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="确认添加" Style="{StaticResource PrimaryButton}"
                            Command="{Binding ConfirmAddCommand}" Margin="0,0,8,0"/>
                    <Button Content="取消" Style="{StaticResource SecondaryButton}"
                            Command="{Binding CancelAddCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Profile List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Profiles}" Margin="4,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,8" Padding="16" CornerRadius="8"
                                Background="{StaticResource CardBgBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Active indicator -->
                                <Ellipse Grid.Column="0" Width="10" Height="10" Margin="0,0,12,0"
                                         VerticalAlignment="Center">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="{StaticResource BorderBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                    <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>

                                <!-- Profile Info -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Url}" FontSize="11" Margin="0,2,0,0"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding UpdatedText, StringFormat='更新时间: {0}'}"
                                               FontSize="11" Margin="0,2,0,0"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Actions -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="使用" Style="{StaticResource PrimaryButton}" Padding="10,5"
                                            Command="{Binding DataContext.SelectProfileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}" Margin="0,0,6,0"/>
                                    <Button Content="更新" Style="{StaticResource SecondaryButton}" Padding="10,5"
                                            Command="{Binding DataContext.UpdateProfileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}" Margin="0,0,6,0"/>
                                    <Button Content="删除" Style="{StaticResource DangerButton}" Padding="10,5"
                                            Command="{Binding DataContext.DeleteProfileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status -->
        <TextBlock Grid.Row="3" Text="{Binding StatusMessage}" Margin="4,8"
                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
    </Grid>
</UserControl>
